<div class='item-options'>
  <%= link_to user do %>
  View <%= glyphicon('eye-open') %><br />
  <% end %>

  <%= link_to edit_user_path(user), :remote => true do %>
  Edit <%= glyphicon('pencil') %><br />
  <% end %>
  
  <%= link_to user, :remote => true, :method => :delete do %>
  Delete <%= glyphicon('remove-circle') %> <br />
  <% end %>
</div>
<div class='item-show'>
  
    <p><%= attribute(user, 'name') %></p>
  
    <p><%= attribute(user, 'email') %></p>
  
    <p><%= attribute(user, 'bio') %></p>
  
    <p><%= attribute(user, 'account_id') %></p>
  
    <p><%= attribute(user, 'status') %></p>
  
</div>
